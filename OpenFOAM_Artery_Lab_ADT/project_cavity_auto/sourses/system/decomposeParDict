FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      decomposeParDict;
}

numberOfSubdomains 4; // Количество процессоров

method          scotch; // Метод разбиения (simple, scotch, hierarchical)

simpleCoeffs
{
    n               (2 2 1); // Разбиение по осям x, y, z
    delta           0.001;   // Параметр для балансировки нагрузки
}

hierarchicalCoeffs
{
    n               (2 2 1); // Разбиение по осям x, y, z
    order           xyz;     // Порядок разбиения
}
